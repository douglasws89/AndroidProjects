<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PictureBackground"
    tools:context=".ListEventActivity" >

    <LinearLayout
        android:id="@+id/back_listevent"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/ActionBar"
        android:foregroundGravity="top"
        android:gravity="center_vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/txt_back_listevent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/BackButton"
            android:textSize="40sp"
            android:clickable="true"
            android:text="@string/back"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <ImageView
            android:id="@+id/img_gather_listevent"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:cropToPadding="false"
            android:src="@drawable/gatheraction"
            android:paddingLeft="-15dp" />

        <ImageView
            android:id="@+id/img_addevent"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/add"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:scaleType="fitEnd"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:background="#00ffffff"  />

    </LinearLayout>

    <ListView
        android:id="@+id/lst_listEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back_listevent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/FontWhite" />


</RelativeLayout>