<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleActivity"
    android:id="@+id/st">

    <LinearLayout
        android:id="@+id/back_single"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/ActionBar"
        android:foregroundGravity="top"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:layout_marginBottom="1dp" >

        <TextView
            android:id="@+id/txt_back_single"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/BackButton"
            android:textSize="40sp"
            android:clickable="true"
            android:text="@string/back"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <ImageView
            android:id="@+id/img_gather_single"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:cropToPadding="false"
            android:src="@drawable/gatheraction"
            android:paddingLeft="-15dp" />

        <ImageButton
            android:id="@+id/img_add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/add"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:scaleType="fitEnd"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:onClick="newEvent"
            android:clickable="true"
            android:background="#00ffffff" />

    </LinearLayout>

    <ListView
        android:id="@+id/lst_SingleEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/back_single"
        android:padding="5dp"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</RelativeLayout>

