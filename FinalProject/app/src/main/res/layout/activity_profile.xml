<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/back_profile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/ActionBar"
        android:foregroundGravity="top"
        android:gravity="center_vertical"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/txt_back_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/BackButton"
            android:textSize="40sp"
            android:clickable="true"
            android:text="@string/back"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <ImageView
            android:id="@+id/img_gather_profile"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:cropToPadding="false"
            android:src="@drawable/gatheraction"
            android:paddingLeft="-15dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/layout_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#41ffffff">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView6"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_profile_name"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_profile_pic"
                android:gravity="center_horizontal"
                android:background="#41ffffff"
                android:layout_marginBottom="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/txt_profile_name"
                    android:textColor="@color/FontBlack"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_comma"
                    android:text="@string/comma"
                    android:textColor="@color/FontBlack"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:id="@+id/textView11"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/FontBlack"
                    android:textSize="35dp" />
            </LinearLayout>


            <GridLayout
                android:id="@+id/layout_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_username"
                android:textColor="@color/FontBlack"
                android:text="Username:"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:id="@+id/textView9"
                    android:textColor="@color/FontBlack"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textSize="20sp"
                    android:layout_columnSpan="30" />



                <TextView
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_bio"
                    android:text="Bio:"
                    android:textColor="@color/FontBlack"
                    android:textSize="20sp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:id="@+id/textView12"
                    android:textColor="@color/FontBlack"
                    android:layout_gravity="right"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_blue"
                    android:paddingLeft="10dp"
                    android:layout_columnSpan="1"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>



            </GridLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
